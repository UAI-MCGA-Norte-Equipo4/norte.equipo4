@model ArtMarket.Models.RegisterViewModel
@{
    ViewBag.Title = "Registro";
}

<div class="limiter">
    <div class="container-login100">
        <div style="text-align: center;">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
            <h3 style="padding-bottom: 10px">Crear Cuenta</h3>
                <div style="text-align: center;" data-validate="Se requiere un email válido: ejemplo@abc.com">
                    <input class="form-control w-auto centered" type="text" name="email" placeholder="Email">
                    <span class="focus-input100-1"></span>
                    <span class="focus-input100-2"></span>
                </div>
                <div style="text-align: center;" data-validate="Debe completar la contraseña">
                    <input class="form-control w-auto centered" type="password" name="password" placeholder="Contraseña">
                    <span class="focus-input100-1"></span>
                    <span class="focus-input100-2"></span>
                </div>
                <div style="text-align: center; padding-bottom: 10px" data-validate="Debe completar la contraseña">
                    <input class="form-control w-auto centered" type="password" name="confirmpassword" placeholder="Confirmar contraseña">
                    <span class="focus-input100-1"></span>
                    <span class="focus-input100-2"></span>
                </div>

                <div class="container-login100-form-btn m-t-20">
                    @*<input type="submit" value="Log in" class="login100-form-btn" />*@
                    <button class="btn-primary">Registrarme</button>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="text-center mt-3">
                    <span class="txt1">Ya tengo cuenta:</span>
                    <a href="/Account/Login" class="txt2 hov1">Iniciar sesión</a>
                </div>
            }
        </div>
    </div>
</div>
<!-- Register scripts -->
@section Scripts {
    @Scripts.Render("~/bundles/login")

    @* versión anterior *@
    @Scripts.Render("~/bundles/jqueryval")
}
