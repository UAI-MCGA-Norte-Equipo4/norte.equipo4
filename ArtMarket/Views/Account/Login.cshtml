@using ArtMarket.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<div class="limiter">
    <div class="container-login100">
        <div style="text-align: center">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
            <h3 style="padding-bottom: 10px">Ingresar a mi cuenta</h3>
                <div style="text-align: center" data-validate="Se requiere un email válido: ejemplo@abc.com">
                    <input class="form-control w-auto centered" type="text" name="email" placeholder="Email">
                    <span class="focus-input100-1"></span>
                    <span class="focus-input100-2"></span>
                </div>
                <div style="text-align: center; padding-bottom: 10px" data-validate="Debe completar la contraseña">
                    <input class="form-control w-auto centered" type="password" name="password" placeholder="Contraseña">
                    <span class="focus-input100-1"></span>
                    <span class="focus-input100-2"></span>
                </div>
                <div class="custom-control custom-checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input" })
                    <label class="custom-control-label" style="padding-bottom: 10px;" for="RememberMe">Recordarme</label>
                </div>

                <div class="container-login100-form-btn m-t-20">
                    @*<input type="submit" value="Log in" class="login100-form-btn" />*@
                    <button class="btn-primary">Iniciar sesión</button>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="text-center p-t-45 p-b-4">
                    <span class="txt1">¿Olvidaste</span>
                    <a href="/Account/ForgotPassword" class="txt2 hov1">usuario / contraseña?</a>
                </div>
                <div class="text-center">
                    <span class="txt1">¿Crear una cuenta?</span>
                    <a href="/Account/Register" class="txt2 hov1">Registro</a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Login scripts -->
@section Scripts {
    @Scripts.Render("~/bundles/login")

    @* versión anterior *@
    @Scripts.Render("~/bundles/jqueryval")
}

