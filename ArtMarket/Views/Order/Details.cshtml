@using Common.Entities;
@model IList<OrderDetail>

@{
  ViewBag.Title = "Detalles de la orden";
}

<div class="order-form form-dialog" style="margin:20px auto;">
  <h2>Detalle de la Orden</h2>
  <table style="text-align:center;">
    <thead>
      <tr>
        <th>Id</th>
        <th>Producto</th>
        <th>Cantidad</th>
        <th>Valor</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
    @foreach (OrderDetail orderDetail in Model)
    {
      <tr>
        <td> @orderDetail.Id</td>
        <td> @orderDetail.Product.Title</td>
        <td> @orderDetail.Quantity</td>
        <td> @orderDetail.Price</td>
      </tr>
    }

  </table>
</div>



